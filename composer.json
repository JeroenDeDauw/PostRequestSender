{
	"name": "jeroen/post-request-sender",
	"description": "Minimal interface for sending post quest, including test double",
	"homepage": "https://github.com/JeroenDeDauw/PostRequestSender",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "https://www.EntropyWins.wtf"
		}
	],
	"require": {
		"php": "^8.1",
		"psr/log": "^3|^2|^1"
	},
	"suggest": {
		"guzzlehttp/guzzle": "Allows using the GuzzlePostRequestSender implementation"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5.2",
		"vimeo/psalm": "^4.19.0",
		"phpstan/phpstan": "^1.4.3",
		"jeroen/psr-log-test-doubles": "^3.1.0",
		"guzzlehttp/guzzle": "^7.0.1"
	},
	"autoload": {
		"psr-4": {
			"Jeroen\\PostRequestSender\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"ProWiki\\PostRequestSender\\Tests\\": "tests/"
		}
	}
}
